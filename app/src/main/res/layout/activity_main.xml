<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tntadvance.testcamera.MainActivity">

    <Button
        android:id="@+id/btnCamera2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take From Camera" />

    <Button
        android:id="@+id/btnCamera3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select From gallerry" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera - Crop" />

    <Button
        android:id="@+id/btnURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Image - Picasso" />

    <Button
        android:id="@+id/btnSaveImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Image " />

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />






</LinearLayout>
